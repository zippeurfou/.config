keybind = cmd+g>-=new_split:down

keybind = cmd+g>j=goto_split:bottom
keybind = cmd+g>k=goto_split:top
keybind = cmd+g>h=goto_split:left
keybind = cmd+g>l=goto_split:right

keybind = cmd+g>m=toggle_split_zoom

keybind = cmd+g>e=equalize_splits

